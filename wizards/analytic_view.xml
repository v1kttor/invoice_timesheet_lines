<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="wizard_form_view">
        <field name="name">wizard.form</field>
        <field name="model">analytic.line.invoice.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Invoice">
                <field name="state" invisible="1"/>
                <group states="initial">
                    <field name="product_id" domain="[('type', 'in', ['service'])]"/>
                    <field name="merge_timesheets"/>
                </group>
                    <field name="invoices" states="finished">
                        <tree edit="0" delete="0" create="0">
                            <field name="partner_id" groups="base.group_user" string="Customer"/>
                            <field name="date_invoice"/>
                            <field name="number"/>
                            <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                            <field name="user_id"/>
                            <field name="date_due"/>
                            <field name="amount_total_signed" string="Total" sum="Total"/>
                            <field name="residual_signed" string="Amount Due" sum="Amount Due"/>
                            <field name="state"/>
                        </tree>
                    </field>
                <footer states="initial">
                    <button name="create_lines"
                            type="object"
                            string="Create"
                            class="oe_highlight"/>
                    <button special="cancel"
                            string="Cancel"/>
                </footer>
                <footer states="finished">
                    <button special="cancel"
                            string="Close"
                            class="oe_highlight"/>
                </footer>
            </form>
    </field>
    </record>
    <act_window name="Create Invoice"
    res_model="analytic.line.invoice.wizard"
    src_model="account.analytic.line"
    view_mode="form"
    multi="True"
    target="new"
    context=""
    id="action_invoice_wizard"/>
</odoo>
