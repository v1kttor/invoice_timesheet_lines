 <odoo>
    <record id="invoice_timesheet_view" model="ir.ui.view">
        <field name="name">account.analytic.line.tree</field>
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_tree"/>
          <field name="arch" type="xml">
              <field name="task_id" position="after">
                  <field name="is_invoiced"/>
              </field>
          </field>
    </record>
    <record model="ir.ui.view" id="wizard_form_view">
        <field name="name">wizard.form</field>
        <field name="model">analytic.line.invoice.wizard</field>
        <field name="arch" type="xml">
            <form string="Create Invoice">
                <group>
                    <field name="product"/>
                    <field name="merge_timesheet"/>
                </group>
                <footer>
                    <button name="create"
                            type="object"
                            string="Create"
                            class="oe_highlight"/>
                    or
                    <button special="cancel"
                            string="Cancel"/>
                </footer>
            </form>
    </field>
    </record>
    <act_window name="Create Invoice"
    res_model="analytic.line.invoice.wizard"
    src_model="account.analytic.line"
    view_mode="form"
    multi="True"
    target="new"
    context=""
    id="wizard_form_view"/>
</odoo>
